<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.simplytapp.android.pinentrytest.MainActivity">

    <TextView
        android:text="Current Pin"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:paddingRight="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/existing_pin"
        android:text="0000"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <!-- Center the buttons and make them all the same width -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:layout_marginBottom="7sp"
            android:text="Set Pin"
            android:onClick="setPinDialog" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7sp"
            android:text="Verify Pin"
            android:onClick="verifyPinDialog" />

        <!-- Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Pin"
            android:onClick="changePinDialog" / -->


    </LinearLayout>

</LinearLayout>